<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginCountryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/choose_your_country"
        app:layout_constraintBottom_toTopOf="@+id/country_icon"
        app:layout_constraintEnd_toEndOf="@+id/country_icon"
        app:layout_constraintStart_toStartOf="@+id/country_icon" />

    <ImageView
        android:id="@+id/country_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic[12]" />

    <Button
        android:id="@+id/country_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/button_go"
        app:layout_constraintEnd_toEndOf="@+id/country_icon"
        app:layout_constraintStart_toStartOf="@+id/country_icon"
        app:layout_constraintTop_toBottomOf="@+id/country_icon" />

</android.support.constraint.ConstraintLayout>