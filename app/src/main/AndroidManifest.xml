<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.rankov.kaboom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="me.rankov.kaboom.App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="me.rankov.kaboom.country_select.list.CountriesListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.DefaultActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.rankov.kaboom.country_select.CountryDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar.DefaultActivity" />
    </application>

</manifest>